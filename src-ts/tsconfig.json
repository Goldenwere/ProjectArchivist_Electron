{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [ "esnext", "dom" ],
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build/script",
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "*": ["*"],
      "~/*": [ "src/script/*" ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
